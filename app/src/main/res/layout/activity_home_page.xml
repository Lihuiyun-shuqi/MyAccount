<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/hpAllOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="总支出:0.00(元)"
            android:textSize="20sp"
            android:textColor="#8B7500"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_marginBottom="15dp"/>

        <ListView
            android:id="@+id/hp_detaillist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/listnodata"
            android:text="No Data"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#01000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgCa_homepage"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:src="@drawable/chart"
            android:onClick="img_op_hp"/>

        <ImageView
            android:id="@+id/imgHp_homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FF8C00"
            android:onClick="img_op_hp"
            android:src="@drawable/add_selected" />

        <ImageView
            android:id="@+id/imgMe_homepage"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:src="@drawable/me"
            android:onClick="img_op_hp"/>
    </LinearLayout>
</LinearLayout>